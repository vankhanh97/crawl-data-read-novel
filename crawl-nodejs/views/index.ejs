<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Hello</title>
</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<style>
    body {
        padding: 0 40px 40px;
        font-size: 30px;
        word-break: revert;
        line-height: 70px;
        line-break: normal;
        text-align: initial;
        background: gainsboro;
    }
    .button-fixed {
        z-index: 10000;
        position: fixed;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
    }

</style>
<body>
<span>Chương: <%= chapter %> - </span>
<p><%= title1 %></p>
<p style="white-space: pre-line"><%= content %></p>
<div class="button-fixed" >
    <form method="get" id="form">
        <button type="button" class="btn btn-success btn-chapter" data-type="previous">Lui</button>
        <input type="text" style="height: 40px;width: 40px" class="btn-go" data-type="index">
        <button type="button" class="btn btn-success btn-chapter" data-type="next">Tới</button>
        <input type="hidden" name="chapter" value="<%= chapter %>">
    </form>
</div>

</body>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script>
    $(document).on('click', '.btn-chapter', function (e) {
        e.preventDefault();
        let $targetInput = $('input[type="hidden"][name="chapter"]');
        let type = $(this).data('type');
        let currChapter = Number($targetInput.val());
        if(type == 'next'){
            $targetInput.val(currChapter + 1);
        } else {
            $targetInput.val(currChapter - 1);
        }
        $('#form').submit();
    });
    $(document).on('keypress', '.btn-go', function (e) {

        if(e.which==13){
            e.preventDefault();
            let $targetInput = $('input[type="hidden"][name="chapter"]');
            $targetInput.val($('.btn-go').val());
            $('#form').submit();
        }
    });

    $(document).on('onkeydown', function (e) {
        if (e.which==39){
            e.preventDefault();
            let $targetInput = $('input[type="hidden"][name="chapter"]');
            let currChapter = Number($targetInput.val());
            $targetInput.val(currChapter + 1);
            $('#form').submit();
        }
        if (e.which==37){
            e.preventDefault();
            let $targetInput = $('input[type="hidden"][name="chapter"]');
            let currChapter = Number($targetInput.val());
            $targetInput.val(currChapter - 1);
            $('#form').submit();
        }
    })
</script>
</html>